{
  "colors": {
    "primary": "#0A7FC2",
    "primaryLight": "#2B9FDB",
    "primaryDark": "#065A8D",
    "primaryPale": "#E8F4F8",
    
    "secondary": "#FF6B6B",
    "accent": "#4ECDC4",
    
    "background": "#FAFAFA",
    "surface": "#FFFFFF",
    "text": "#2D3748",
    "textLight": "#757575",
    "border": "#E0E0E0"
  },

  "borderRadius": {
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "full": "9999px"
  },

  "spacing": {
    "xs": "0.5rem",
    "sm": "1rem",
    "md": "1.5rem",
    "lg": "2rem",
    "xl": "3rem"
  },

  "shadows": {
    "sm": "0 2px 8px rgba(0, 0, 0, 0.08)",
    "md": "0 4px 12px rgba(0, 0, 0, 0.1)",
    "lg": "0 8px 24px rgba(0, 0, 0, 0.12)",
    "ocean": "0 10px 30px rgba(10, 127, 194, 0.2)"
  },

  "typography": {
    "fontFamily": "'Inter', -apple-system, sans-serif",
    "fontSize": {
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.5rem",
      "2xl": "2rem",
      "3xl": "2.5rem"
    }
  },

  "components": {
    "button": {
      "padding": "1rem 2rem",
      "borderRadius": "9999px",
      "fontSize": "1rem",
      "fontWeight": "600",
      "minHeight": "48px",
      "transition": "all 0.2s ease"
    },
    "card": {
      "borderRadius": "1.25rem",
      "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.08)",
      "overflow": "hidden"
    },
    "input": {
      "borderRadius": "9999px",
      "padding": "0.875rem 1rem",
      "fontSize": "1rem",
      "minHeight": "48px",
      "border": "2px solid transparent"
    }
  }
}
